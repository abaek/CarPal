<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pebblepace"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        <activity
            android:name="com.example.pebblepace.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pebblepace.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:parentActivityName="com.example.pebblepace.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pebblepace.MainActivity" />
        </activity>
        <activity
            android:name="com.example.pebblepace.ShowCard"
            android:label="@string/title_activity_show_card"
            android:parentActivityName="com.example.pebblepace.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pebblepace.MainActivity" />
        </activity>
        <activity
            android:name="com.example.pebblepace.ExampleSportsActivity"
            android:label="@string/title_activity_example_sports"
            android:parentActivityName="com.example.pebblepace.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.pebblepace.MainActivity" />
        </activity>
    </application>

</manifest>
