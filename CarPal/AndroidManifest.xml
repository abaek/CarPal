<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.parse.starter"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/carpal_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat" >
        <activity
            android:name="com.parse.starter.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.parse.starter.Signup"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name="com.parse.starter.Menuscreen"
            android:label="@string/title_activity_menuscreen" >
        </activity>
        <activity
            android:name="com.parse.starter.Search"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="com.parse.starter.Create"
            android:label="@string/title_activity_create" >
        </activity>
        <activity
            android:name="com.parse.starter.Myrides"
            android:label="@string/title_activity_myrides" >
        </activity>
        <activity
            android:name="com.parse.starter.Displayresults"
            android:label="@string/title_activity_displayresults" >
        </activity>
        <activity
            android:name="com.parse.starter.Singleride"
            android:label="@string/title_activity_singleride" >
        </activity>
    </application>

</manifest>
